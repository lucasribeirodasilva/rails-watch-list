<h2><%= @list.name %></h2>

<%= link_to "Back to lists", lists_path %>

<%= link_to "Edit this list", edit_list_path(@list) %>

<hr>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
  <li>
    <p><%= bookmark.comment %></p>
      <p>Movie: <%=bookmark.movie.title%>
      <%=link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p>
  </li>
  <% end %>
</ul>

<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
